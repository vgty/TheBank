<!DOCTYPE html>
<html>
  <head>
    <title>Bank</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <p style="padding-top: 13px"><strong><%= link_to "#{"\u25A0".encode('utf-8')}TheBank", root_path, :class => 'navbar-brand ' %></strong></p> 
        
        <div class="float-right">
          <div class="navbar-nav">
            <% if user_signed_in? %>
              <%= link_to 'User Profile', edit_user_registration_path, :class => 'nav-item nav-link' %> 
              <%= link_to "Dashboard", user_path(current_user), :class => 'nav-item nav-link'  %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'nav-item nav-link'  %>
            <% else %>
              <%= link_to "Sign up", new_user_registration_path, :class => 'nav-item nav-link'  %> 
              <%= link_to "Login", new_user_session_path, :class => 'nav-item nav-link'  %>
            <% end %>
          </div>
        </div>
      </div>  
    </nav>
    <p class="notice alert-success "><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <p class="navbar-text pull-right">
    <div class="container">
      <%= yield %>
    </div>
    
  </body>
</html>
